

<h1>Followers</h1>
<div class="row">
  <% @followers.each do |follower| %>
      <div class="card m-2" style="width: 18rem">
        <img class="card-img-top" src=<%= follower.avatar %> alt="Card image cap" />
          <div class="card-body">
            <p class="card-title"><%= follower.email %></p>
            <%= link_to "Follow", follow_path(follower) %>
          </div>
      </div>
  <% end %>
</div>


